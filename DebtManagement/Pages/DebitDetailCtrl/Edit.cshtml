@page
@model DebtManagement.Pages.DebitDetailCtrl.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DebitDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DebitDetail.Id" />
            <div class="form-group">
                <label asp-for="DebitDetail.DebitId" class="control-label"></label>
                <select asp-for="DebitDetail.DebitId" class="form-control" asp-items="ViewBag.DebitId"></select>
                <span asp-validation-for="DebitDetail.DebitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DebitDetail.Amount" class="control-label"></label>
                <input asp-for="DebitDetail.Amount" class="form-control" />
                <span asp-validation-for="DebitDetail.Amount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DebitDetail.IsPaid" /> @Html.DisplayNameFor(model => model.DebitDetail.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DebitDetail.Date" class="control-label"></label>
                <input asp-for="DebitDetail.Date" class="form-control" />
                <span asp-validation-for="DebitDetail.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DebitDetail.Deadline" class="control-label"></label>
                <input asp-for="DebitDetail.Deadline" class="form-control" />
                <span asp-validation-for="DebitDetail.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DebitDetail.Description" class="control-label"></label>
                <input asp-for="DebitDetail.Description" class="form-control" />
                <span asp-validation-for="DebitDetail.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
